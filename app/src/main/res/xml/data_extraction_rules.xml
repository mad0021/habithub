<?xml version="1.0" encoding="utf-8"?>
<!--
    Reglas de extracción de datos - MÁXIMA PRIVACIDAD
    - Sin backups en la nube (cloud-backup deshabilitado)
    - Sin transferencias de dispositivo
    - Todos los datos permanecen en el dispositivo
    - Sin sincronización con cuentas de Google
-->
<data-extraction-rules>
    <!-- Deshabilitar backups en la nube completamente -->
    <cloud-backup disableIfNoEncryptionCapabilities="true">
        <!-- Excluir TODOS los archivos del backup en la nube -->
        <exclude domain="root" />
        <exclude domain="file" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="external" />
    </cloud-backup>

    <!-- Deshabilitar transferencias entre dispositivos -->
    <device-transfer>
        <!-- Excluir TODOS los archivos de la transferencia -->
        <exclude domain="root" />
        <exclude domain="file" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="external" />
    </device-transfer>
</data-extraction-rules>
